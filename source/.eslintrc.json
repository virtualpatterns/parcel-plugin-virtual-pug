{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "__filePath": "readonly",
    "__require": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "requireConfigFile": true,
    "sourceType": "module"
  },
  "plugins": [
    "babel"
  ],
  "rules": {
    "arrow-parens": "error",
    "comma-dangle": [ "error", "never" ],
    "no-debugger": "warn",
    "indent": [ "error", 2, { "SwitchCase": 1 } ],
    "linebreak-style": [ "error", "unix" ],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "quotes": [ "error", "single" ],
    "semi": [ "error", "never" ]
  }
}
